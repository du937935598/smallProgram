/**index.wxss**/
.index{
	background: #fff;
}
.main{
  box-sizing: border-box;
}
.main .title{
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  padding: 50rpx 30rpx 30rpx 30rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}
.main > .desc{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}
.main .desc{
  font-size: 30rpx;
  color: #666;
  line-height: 40rpx;
  padding: 0rpx 30rpx 50rpx 30rpx;
}
.swiper .swiper-item{
  height: 100%;
  padding-right: 30rpx;
}
.swiper .swiper-item .item{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}
.swiper .swiper-item .item image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  position: relative;
}

.swiper .swiper-item .content{
  position: absolute;
  left: 0;
  color: #fff;
  padding-right: 30rpx;
  text-align: center;
}

.swiper .swiper-item .content .name{
  font-size: 40rpx;
  padding-bottom: 30rpx;
  color: #fff;
  display: block;
}
.swiper .swiper-item .content.color .name{
  font-size: 40rpx;
  padding-bottom: 30rpx;
  color: #333;
  display: block;
}
.swiper .swiper-item .content .desc{
  font-size: 30rpx;
  display: block;
  color: #fff;
  line-height: 50rpx;
}
.swiper .swiper-item .content.color .desc{
  font-size: 30rpx;
  display: block;
  color: #333;
  line-height: 50rpx;
}
.swiper .swiper-item .content .btn{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #fff;
  color: #333;
  margin: auto;
}